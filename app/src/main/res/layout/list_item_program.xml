<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    >

    <!-- 프로그램 이름 / 기관 / 담당자 / 연락처-->

    <TextView
        android:id="@+id/list_item_program_name"
        android:layout_weight="@dimen/program_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/list_item_program_agency"
        android:layout_weight="@dimen/program_agency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/list_item_program_manager"
        android:layout_weight="@dimen/program_manager"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/list_item_program_tel"
        android:layout_weight="@dimen/program_tel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        />

</LinearLayout>
