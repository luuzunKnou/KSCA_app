<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    >

    <TextView
        android:id="@+id/list_item_scc_code"
        android:layout_weight="@dimen/scc_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/list_item_scc_dong"
        android:layout_weight="@dimen/scc_dong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/list_item_scc_name"
        android:layout_weight="@dimen/scc_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        />

</LinearLayout>
