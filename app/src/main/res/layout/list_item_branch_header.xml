<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:weightSum="1"
    >

    <!--코드 / 연합회 /연합회 코드 / 지회 / 지회 코드 / 분회 / 분회 코드-->

    <TextView
        android:id="@+id/list_item_branch_full_code"
        android:layout_weight="@dimen/branch_full_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="지회 코드"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/list_item_area_name"
        android:layout_weight="@dimen/branch_area_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="지회"
        android:padding="4dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/list_item_branch_code"
        android:layout_weight="@dimen/branch_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="코드"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/list_item_branch_name"
        android:layout_weight="@dimen/branch_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="분회"
        android:textStyle="bold"
        />

</LinearLayout>
